<Page x:Class="WpfHangMan.HangManGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfHangMan"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="HangManGamePage"
      Loaded="Onload">

    <Page.Background>
        <ImageBrush ImageSource="2.jpg" Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>

            <!--Result grid-->
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10"/>

            <!--Word grid-->
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>

            <!--Keyboard grid-->
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Button x:Name="MainMenu"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="6"
                Cursor="Hand"
                MinWidth="30"
                MinHeight="30"
                Margin="3"
                FontSize="15"
                Content="Pagrindinis meniu"
                Click="OnMainPageButtonClick"
                Background="Transparent"/>

        <Button x:Name="NewWord"
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.Column="2"
                Grid.ColumnSpan="6"
                Cursor="Hand"
                MinWidth="30"
                MinHeight="30"
                Margin="3"
                FontSize="15"
                Content="Naujas žodis"
                Click="OnNewWordButtonClick"
                Background="Transparent"/>

        <Label x:Name="TriesLeftLabel"
               Grid.Row="3"
               Grid.Column="2"
               Grid.ColumnSpan="6"
               Height="30"
               FontSize="15"
               Content="GALIMOS KLAIDOS:"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Label x:Name="TriesLeftCountLabel"
               Grid.Row="4"
               Grid.Column="4"
               Grid.ColumnSpan="2"
               Height="30"
               FontSize="15"
               Content="-"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Foreground="#FF1AB21A"/>

        <Label x:Name="TimerLabel"
               Grid.Row="5"
               Grid.Column="2"
               Grid.ColumnSpan="6"
               Height="30"
               FontSize="15"
               Content="PRAĖJO LAIKO:"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Label x:Name="TimerCountLabel"
               Grid.Row="6"
               Grid.Column="2"
               Grid.ColumnSpan="6"
               Height="30"
               FontSize="15"
               Content="00:00:00"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Image x:Name="HangImg"
               Grid.Row="1"
               Grid.Column="10"
               Grid.RowSpan="8"
               Grid.ColumnSpan="12"
        />


        <!--Text-->
        <TextBlock x:Name="WordBlock"
                   Grid.Row="9"
                   Grid.Column="2"
                   Grid.RowSpan="2"
                   Grid.ColumnSpan="20"
                   FontSize="36"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        
